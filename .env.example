# Django Configuration
SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=False
ALLOWED_HOSTS=garden.passwordspace.com
DJANGO_SETTINGS_MODULE=garden_planner.settings_production

# Domain Configuration (for Traefik routing)
DOMAIN_NAME=garden.passwordspace.com

# Database Configuration
POSTGRES_DB=garden_planner
POSTGRES_USER=garden_user
POSTGRES_PASSWORD=your-strong-database-password-here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Security Settings (Traefik handles SSL, so these should be enabled)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# AI Assistant Configuration (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email Configuration
# For Gmail: You must use an App Password (not your regular password)
# 1. Enable 2-Factor Authentication on your Gmail account
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Generate an App Password for "Mail"
# 4. Use the 16-character code as EMAIL_HOST_PASSWORD below
#
# For development, use console backend (prints to terminal):
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
#
# For production with Gmail:
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-character-app-password-here
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=Chicago Garden Planner <your-email@gmail.com>

# Site Configuration
SITE_URL=https://your-domain.com

# Logging
DJANGO_LOG_LEVEL=INFO
