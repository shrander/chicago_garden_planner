# Django Configuration
SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=False
ALLOWED_HOSTS=garden.passwordspace.com
DJANGO_SETTINGS_MODULE=garden_planner.settings_production

# Domain Configuration (for Traefik routing)
DOMAIN_NAME=garden.passwordspace.com

# Database Configuration
POSTGRES_DB=garden_planner
POSTGRES_USER=garden_user
POSTGRES_PASSWORD=your-strong-database-password-here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Security Settings (Traefik handles SSL, so these should be enabled)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# AI Assistant Configuration (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email Configuration (Optional)
# By default, emails are printed to console in development
